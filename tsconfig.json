{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": false,
    "sourceMap": true,
    "moduleResolution": "NodeNext",
    "removeComments": true,
    "preserveConstEnums": true,
    "noImplicitAny": true
  },
  "include": ["./src/**/*"]
}